<% fields.forEach(function(field) { %>
    <% if(field.type != 'in') { %>
        <div class="control-group">
            <label class="control-label" for="<%- field.name %>"><%- field.title %></label>
            <div class="controls">
                <% if(field.type == 'textarea') { %>
                    <textarea class="input-xlarge span6" id="<%- field.name %>" name="<%- field.name %>" rows="3"><%- field.defaultvalue %></textarea>
                <% } else  { %>
                    <input id="<%- field.name %>" name="<%- field.name %>" type="text" class="input-xlarge span6" value="<%- field.defaultvalue %>"></input>
                <% } %>
                <% if(field.description) { %>
                    <p class="help-block"><%- field.description %></p>
                <% } %>
            </div>
        </div>
    <% } %>
<% }); %>