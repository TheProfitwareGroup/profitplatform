		<% if( (page == '/index') || (page == '/' ) || (title != '' )) { %>
			<div class="hero-unit">
			    <% if(!auth) { %>
				<% if( title == '' ) { %>
					<h1 style="padding-bottom:7px!important;">Добро пожаловать!</h1>
					<p>Добро пожаловать в EventFlow!
					</p>
					<p>
					Для продолжения работы пожалуйста введите Ваши учетные данные.
					</p>
				<% } else { %>
					<h2><%- title %></h2>
				<% } %>
		  <% } else { %>
		      <ul class="nav nav-list">
		          <li class="nav-header">ProfitPlatform</li>
		          <li><a href="#profile"><i class="icon-signal"></i> Test</a></li>
		      </ul>
		  <% } %>
			</div>
		<% } %>
			<% if (content != '') { %>
               <% if(page == '/leftmenu' && auth && ajax) { %>
                       <div class="span3">
                          <div class="sidebar-nav well">
                              <%- content %>
                          </div>
                        </div>
                <% } else { %>
    				<div class="row">
    				    <% if(path != '') { %>
    				    <div class="span<%- auth ? 9 : 12 %>">
    				        <%- path %>
    				    </div>
    				    <% } %>
    				</div>
    				<div class="row">
    					<div class="span<%- auth ? 9 : 12 %>">
    						<%- content %>
    					</div>
    				</div>
    			<hr>
    			<footer>
    				<p>&copy; 2011 - <%- year %>, <a href="http://tpg.su/" target="_blank">The Profitware Group</a></p>
    			</footer>
    			             <% } %>
                <% } %>