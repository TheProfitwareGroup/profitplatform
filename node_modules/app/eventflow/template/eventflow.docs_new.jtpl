<form class="form-horizontal" id="docs_new" method="GET" action="/docs_new">
    <fieldset>
        <legend>Создание документа EventFlow</legend>
        <div class="control-group">
            <label class="control-label">Референс документа</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input"><%- ref %></span>
            </div>
          </div>
        <div class="control-group">
            <label class="control-label" for="doctype">Тип документа</label>
            <div class="controls">
                <select id="doctype" name="doctype" class="span6">
                    <option<%- selecteddoctype == '' ? ' selected' : '' %>>-</option>
                <% doctypes.forEach(function(doctype){ %>
                    <option<%- selecteddoctype == doctype.name ? ' selected' : '' %> value="<%- doctype.name %>"><%- doctype.name %> - <%- doctype.description %></option>
                <% }); %>
                </select>
            </div>
        </div>
        <span id="additional"><%- fields %></span>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Сохранить документ</button>
        </div>
    </fieldset>
</form>