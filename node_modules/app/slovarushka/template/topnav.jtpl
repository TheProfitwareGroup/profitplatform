	<div class="topbar">
		<div class="topbar-inner">
			<div class="container-fluid">
				<a class="brand" href="/"><%- brand %></a>
				<ul class="nav">
				<% menu.forEach(function(mi) { %>
					<li id="<%- mi.id %>" class="<%- mi.active ? 'active' : '' %>"><a href="<%- mi.href %>"><%- mi.title %></a></li> 
				<% }) %>
				</ul>
				<% if(loginname == '') { %>
				<form class="pull-right form-search" method="POST" action="/login" id="lform">
                    <input name="login" type="text" class="input-small" placeholder="Логин" />
                    <input name="pwd" type="password" class="input-small" placeholder="Пароль" />
                    <button type="submit" class="btn">Войти</button>
                </form>
                <% } else { %>
                <p class="pull-right">
                    Вы вошли как 
                    <a href="#platform.profile"><%- loginname %></a>
                    |
                    <a href="#logout">Выход</a>
                 </p>
				<% } %>
			</div>
		</div>
	</div>