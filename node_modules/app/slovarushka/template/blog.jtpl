<% if (blog.length > 0) { %>
    <% var i = 0; %>
    <% blog.reverse().forEach(function(post) { %>
        <% if(i > 0) { %>
            <hr>
        <% } %>
        <% i++; %>
        <% var d = new Date(post.date); %>
        <div class="row">
            <div class="span11"><h4><%- post.title %></h4><p><%- post.content %></p></div>
            <div class="span3">
                <h6><%- d.getDate() + '/' + (d.getMonth() + 1) + '/' + d.getFullYear() %></h6>
                <a class="btn content" href="#blog/<%- post.idnum %>">Читать полностью &raquo;</a>
            </div>
        </div>
    <% }); %>
<% } %>